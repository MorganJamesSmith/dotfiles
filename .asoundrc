pcm.loophw00 {
    type hw
    card Loopback
    device 0
    format S32_LE
    rate 96000   subdevice 0
}

# Playback
pcm.amix {
    type dmix
    ipc_key 219345
    slave {
        pcm loophw00
        period_size 4096
        periods 2
   }
}


pcm.loophw01 {
    type hw
    card Loopback
    device 0
    subdevice 1
}

# duplex device combining our PCM devices defined above
pcm.aduplex {
    type asym
    playback.pcm "amix"
    capture.pcm "loophw01"
}

# ------------------------------------------------------
# for jack alsa_in and alsa_out: looped-back signal at other ends
pcm.ploop {
    type hw
    card Loopback
    device 1
    subdevice 1
}

pcm.cloop {
    type hw
    card Loopback
    device 1
    subdevice 0
    format S32_LE
    rate 96000
}

# ------------------------------------------------------
# default device

pcm.!default {
    type plug
    slave.pcm "aduplex"
}

