# A duplex interface attached to the loopback device
pcm.aduplex {
    type asym
    playback.pcm {
        type dmix
        ipc_key 219345
        slave {
            pcm "hw:Loopback,0,0"
            period_size 4096
            periods 2
            format S32_LE
            rate 96000
        }
    }
    capture.pcm {
        type hw
        card Loopback
        device 0
        subdevice 1
    }
}


# Attaches system:capture to the loopback device
# This is for input devices like microphones
pcm.ploop {
    type hw
    card Loopback
    device 1
    subdevice 1
}

# Attaches system:playback to the loopback device
# This is for output devices like speakers
pcm.cloop {
    type hw
    card Loopback
    device 1
    subdevice 0
    format S32_LE
    rate 96000
}

# ------------------------------------------------------
# default device

pcm.!default {
    type plug
    slave.pcm "aduplex"
    hint {
        show on
        description "ALSA -> JACK audio"
    }
}

