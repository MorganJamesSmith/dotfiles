# Programs

super + Return
    $TERMINAL
{super + a,XF86Calculator}
    $TERMINAL -e R
super + d
    dmenu_run
super + e
    $TERMINAL -e m
{super + w,XF86HomePage}
    $BROWSER
super + x
    slock
super + y
    $TERMINAL -e calcurse

# Volume/Mic

{super + F1,XF86AudioMute}
    pactl set-sink-mute 0 toggle; notify mute

{super + F2,XF86AudioLowerVolume}
    pulsemixer --change-volume -5; notify volume

shift + {super + F2,XF86AudioLowerVolume}
    pulsemixer --set-volume 0; notify volume

{super + F3,XF86AudioRaiseVolume}
    pulsemixer --change-volume +5; notify volume

shift + {super + F3,XF86AudioRaiseVolume}
    pulsemixer --set-volume 100; notify volume

{super + F4,XF86AudioMicMute}
    amixer -c 1 set 'Capture' toggle

# Music

super + Right
    mpc next; notify song
super + Left
    mpc prev; notify song
super + p
    mpc toggle; notify songplaying
super + shift + slash
	notify songstatus

# Input

super + c
    toggletrackpoint; notify trackpoint
super + shift + c
    toggletrackpad; notify trackpad

# Monitor

{super + F5,XF86MonBrightnessDown}
    xbacklight -steps 1 - 10; notify backlight
shift + {super + F5,XF86MonBrightnessDown}
    xbacklight -steps 1 = 0; notify backlight
{super + F6,XF86MonBrightnessUp}
    xbacklight -steps 1 + 10; notify backlight
shift + {super + F6,XF86MonBrightnessUp}
    xbacklight -steps 1 = 100; notify backlight
{super + F7,XF86Display}
    displayselect
